{
  "name": "arke-organizer-service",
  "main": "src/index.ts",
  "compatibility_date": "2024-01-01",

  // Service bindings for callbacks and IPFS operations
  "services": [
    { "binding": "IPFS_WRAPPER", "service": "arke-ipfs-api" },
    { "binding": "ORCHESTRATOR", "service": "arke-orchestrator" }
  ],

  // Durable Object - SQLite-backed for robust large content storage (10GB vs 128KB limit)
  "durable_objects": {
    "bindings": [
      { "name": "ORGANIZER_BATCH_DO", "class_name": "OrganizerBatchDO" }
    ]
  },

  // DO migrations - v2 deleted old KV DO, v3 creates new SQLite DO
  "migrations": [
    { "tag": "v2", "deleted_classes": ["OrganizerBatchDO"] },
    { "tag": "v3", "new_sqlite_classes": ["OrganizerBatchDO"] }
  ],

  // Environment variables
  "vars": {
    "DEEPINFRA_BASE_URL": "https://api.deepinfra.com/v1/openai",
    "MODEL_NAME": "deepseek-ai/DeepSeek-V3-0324",
    "MAX_TOKENS": 163839,
    "TOKEN_BUDGET_PERCENTAGE": 0.3,
    "MAX_RETRIES_PER_PI": "3",
    "MAX_CALLBACK_RETRIES": "3",
    "ALARM_INTERVAL_MS": "100"
  },

  // Note: Set DEEPINFRA_API_KEY as a secret using:
  // wrangler secret put DEEPINFRA_API_KEY

  // Build configuration
  "build": {
    "command": "npm run build"
  },

  // Domain configuration
  "routes": [
    {
      "pattern": "organizer.arke.institute",
      "custom_domain": true
    }
  ],

  // Observability
  "observability": {
    "enabled": true
  }
}
